<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout1"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tus resultados son"
            android:id="@+id/textView2"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold|italic"
            android:textSize="30dp"
            android:textColor="#2ed5ca"
            android:typeface="serif" />

        <TextView
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:id="@+id/nombree"
            android:text="Nombre:"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:textColor="#ffbd53"
            android:typeface="serif" />

        <TextView
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:id="@+id/IMC"
            android:text="IMC:"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:textColor="#ffbd53"
            android:typeface="serif" />

        <TextView
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:id="@+id/peso"
            android:text="Peso Ideal (Kg):"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:textColor="#ffbd53"
            android:typeface="serif" />

        <TextView
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:id="@+id/Calorias"
            android:text="Calorias recomendadas:"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:textColor="#ffbd53"
            android:typeface="serif" />

        <TextView
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:id="@+id/recomendacion"
            android:text="Recomendaciones:"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:textColor="#ffbd53"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ComparaciÃ³n de tu peso"
            android:id="@+id/T3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:textColor="#2ed5ca"
            android:textSize="30dp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="390dp"
            android:layout_height="350dp"
            android:layout_weight="0.22"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Actual"
                android:id="@+id/textView3"
                android:layout_gravity="bottom"
                android:layout_weight="0.14"
                android:textStyle="bold|italic"
                android:textSize="25dp"
                android:typeface="serif"
                android:textColor="#ffbd53"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="300dp"
                android:id="@+id/img1"
                android:layout_weight="0.13"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="-75dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="300dp"
                android:id="@+id/img2"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.11"
                android:layout_gravity="top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sugerido"
                android:id="@+id/textView4"
                android:layout_weight="0.14"
                android:textStyle="bold|italic"
                android:textSize="25dp"
                android:typeface="serif"
                android:textColor="#ffbd53"
                android:layout_marginLeft="-60dp"
                android:layout_gravity="bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="click"
                android:text="Regresar"
                android:id="@+id/reg1"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="85dp"
                android:textStyle="bold|italic"
                android:typeface="serif"
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="click"
                android:text="Salir"
                android:id="@+id/sal1"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold|italic"
                android:typeface="serif"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>